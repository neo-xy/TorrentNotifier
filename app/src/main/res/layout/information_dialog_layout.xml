<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@android:color/transparent"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/inf_text"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#D1D6E7"
        android:background="@drawable/information_dialog_drawable"
        android:text="Have You seen it? -then watch again, haven't seen it? -You know knowthing Jon Snow"
        android:textSize="19sp" />
    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/lw"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#c2b280"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>