<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/just_added_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/just_added_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageb1"
        android:layout_toStartOf="@+id/imageb1"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="7dp"
        android:text="TextView"
        android:textColor="@color/darkTitle2" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/checked_selector" />
</LinearLayout>