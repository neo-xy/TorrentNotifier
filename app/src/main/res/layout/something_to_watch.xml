<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_for_top_5"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_kill_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Something to kill the Time on this shity day:"
        android:textColor="@color/pugnotification_color_white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_movie_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:padding="7dp"
            android:textColor="@color/pugnotification_color_white"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/ib_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/info24"
            android:backgroundTint="@android:color/white" />
    </LinearLayout>
</LinearLayout>