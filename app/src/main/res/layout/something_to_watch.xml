<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_for_top_5"
    android:padding="14dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/kill_time_header_TV"
        android:textSize="20sp"
        android:text="Something to kill the Time on this shity day:"
        android:textColor="@color/pugnotification_color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_selector"
        >
    <TextView
        android:id="@+id/movie_tip_TV"
        android:textSize="17sp"
        android:layout_weight="1"
        android:textColor="@color/pugnotification_color_white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        />

        <ImageButton
            android:id="@+id/information_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info24"
            android:layout_gravity="center"
            android:backgroundTint="@color/pugnotification_color_white"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</LinearLayout>