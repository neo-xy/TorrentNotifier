<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="layout.HomeTab">

    <ImageView
        android:id="@+id/imageb1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title_added"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Day just got a little bit brighter :)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/rec_new_torrents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_added"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginRight="20dp"
        android:visibility="gone" />

    <include
        android:id="@+id/top_5_included"
        layout="@layout/top_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rec_new_torrents"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/something"
        layout="@layout/something_to_watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_5_included"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp" />



</RelativeLayout>
</ScrollView>