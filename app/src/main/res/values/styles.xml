<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/menuItemStyle</item>
        <item name="android:statusBarColor">@android:color/black</item>


    </style>

    <style name="menuItemStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="tabItems">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LightText" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColorSecondary">@color/lightBackground</item>
        <item name="colorAccent">@color/lightBackground</item>
        <item name="android:colorBackground">@color/lightBackground</item>

    </style>

</resources>
